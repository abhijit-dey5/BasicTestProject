$source_file= "<%=@dir_path%>"
$destination_directory="<%=@backup_dir%>"
#if (Test-Path $destination_dir) {Remove-Item $destination_dir/* -Recurse -Force}
Get-ChildItem -Path $destination_directory -Include * -Directory -Recurse -Force | foreach { Remove-Item $_ -Recurse -Force }
Copy-Item -Path $source_file/* -Destination $destination_directory -Recurse -Force